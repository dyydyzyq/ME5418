<mujoco model="panda scene">
  <include file="panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <!-- <body name="grasp_marker">
    <freejoint/>
    <site name="grasp_center_vis" type="sphere" size="0.004" rgba="1 0 1 1"/>
    </body> -->
    <site name="target" type="sphere" size="0.01" rgba="0 1 0 0.6" pos="0.5 0 0.5"/>

    <!--To visualize the goal bound in the environment-->
    <!-- <site name="g1" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.3 -0.4 0.3"/>
    <site name="g2" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.3 -0.4 0.7"/>
    <site name="g3" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.5 -0.4 0.3"/>
    <site name="g4" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.5 -0.4 0.7"/>
    <site name="g5" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.3 0.4 0.3"/>
    <site name="g6" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.3 0.4 0.7"/>
    <site name="g7" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.5 0.4 0.3"/>
    <site name="g8" type="sphere" size="0.01" rgba="1 0 0 0.6" pos="0.5 0.4 0.7"/> -->


    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
    <!-- moving box -->
    <body name="moving_box" pos="0.5 0.2 0.3">
        <joint name="slide_box_x" type="slide" axis="1 0 0" range="-0.2 0.2" damping="1"/>
        <geom type="box" size="0.05 0.05 0.05" mass="0.5" rgba="0.8 0.2 0.2 1"/>
    </body>
    <!-- moving ball -->
    <body name="moving_sphere" pos="0.3 -0.3 0.5">
        <joint name="slide_sphere_y" type="slide" axis="0 1 0" range="-0.2 0.2" damping="1"/>
        <geom type="sphere" size="0.05" mass="0.5" rgba="0.2 0.2 0.8 1"/>
    </body>

    <body mocap="true" name="mocap" pos="0.2 0.3 0.2">
        <site pos="0 0 0.1" size="0.005 0.005 0.1" type="box" name="mocap1" rgba="0 0 1 1"/>
        <site pos="0 0.1 0" size="0.005 0.1 0.005" type="box" name="mocap2" rgba="0 1 0 1"/>
        <site pos="0.1 0 0" size="0.1 0.005 0.005" type="box" name="mocap3" rgba="1 0 0 1"/>
    </body>
  </worldbody>


  <!-- <equality>
        <weld body1="mocap" body2="hand"/>
  </equality> -->

  <actuator>
        <position name="move_box_x" joint="slide_box_x" kp="100" ctrlrange="-0.15 0.15"/>
        <position name="move_sphere_y" joint="slide_sphere_y" kp="100" ctrlrange="-0.15 0.15"/>
  </actuator>

  <keyframe>
    <key name="home" qpos="0    -0.5    0   -1.2   0    1.2   0.7    0.01  0.01" ctrl="0 0 0 -1.57079 0 1.57079 -0.7853 255"/>
  </keyframe>
  
</mujoco>
